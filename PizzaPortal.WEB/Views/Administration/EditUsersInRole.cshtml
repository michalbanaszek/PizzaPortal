@model UsersRoleViewModel

@{
    var roleId = ViewBag.roleId;
    ViewBag.Title = Model.PageTitle;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Items[i].UserId" />
                    <input type="hidden" asp-for="@Model.Items[i].UserName" />
                    <input asp-for="@Model.Items[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Items[i].IsSelected">
                        @Model.Items[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditRole" asp-route-roleId="@roleId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>