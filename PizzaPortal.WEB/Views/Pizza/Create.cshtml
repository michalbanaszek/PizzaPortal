@model PizzaCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>
<hr />

<h4 class="text-center">Pizza</h4>

<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

            <div class="form-group">
                <label asp-for="Name" class="col-md-2 offset-md-2 control-label"></label>
                <div class="col-md-8 offset-md-2">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="col-md-2 offset-md-2 control-label"></label>
                <div class="col-md-8 offset-md-2">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="col-md-2 offset-md-2 control-label"></label>
                <div class="col-md-8 offset-md-2">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CategoryId" class="col-md-2 offset-md-2 control-label">Category</label>
                <div class="col-md-8 offset-md-2">
                    <select asp-for="@Model.CategoryId"
                            asp-items="@(new SelectList(Model.Categories,"Id","Name"))" class="custom-select">
                        <option value="" hidden disabled selected>Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="Photo" class="col-md-2 offset-md-2 control-label"></label>
                <div class="col-md-8 offset-md-2">
                    <div class="custom-file">
                        <input asp-for="Photo" type="file" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div class="form-group form-check">
                <div class="col-md-8 offset-md-2">
                    <input asp-for="IsPreferredPizza" class="form-check-input" type="checkbox">
                    <label asp-for="IsPreferredPizza" class="form-check-label">
                        IsPreferredPizza
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 offset-md-2">
                    <input type="submit" value="Create" class="btn btn btn-block btn-primary" />
                </div>
            </div>

            <div class="form-group">
                <div class="text-center">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


