@model PizzaDeleteViewModel

@{
    ViewData["Title"] = "Delete";
    var photoPath = "~/images/pizzas/" + (string.IsNullOrEmpty(Model.PhotoPath) == true ? "noimage.jpg" : Model.PhotoPath);
}

<h1 class="text-center">Delete</h1>
<h3 class="text-center">Are you sure you want to delete this?</h3>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="text-center">@Model.Id</h5>
            </div>
            <img class="card-img-top" src="@photoPath" asp-append-version="true" />
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <h5>Price : @Model.Price.ToString("c")</h5>
            </div>
            <div class="card-footer text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-controller="Pizza" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>        
            </div>
        </div>
    </div>
</div>

