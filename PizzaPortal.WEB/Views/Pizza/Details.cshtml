@model PizzaDetailViewModel

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/pizzas/" + (Model.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>Pizza ID : @Model.Id</h4>
                <h4>Price : @Model.Price</h4>
            </div>
            <div class="card-footer text-center">             
                <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

