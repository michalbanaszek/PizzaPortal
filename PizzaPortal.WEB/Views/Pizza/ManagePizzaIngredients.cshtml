@model List<PizzaIngredientsViewModel>
@{
    ViewData["Title"] = "ManagePizzaIngredients";

    var pizzaId = ViewBag.PizzaId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Pizza Ingredients</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].IngredientId" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].Name
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Edit" asp-route-id="@pizzaId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
