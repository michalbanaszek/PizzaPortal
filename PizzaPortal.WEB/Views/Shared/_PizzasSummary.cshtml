@model ItemPizzaViewModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">     
        <img src="~/images/pizza1.png" style="height:250px; width: 250px;"/>
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Pizza" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="text-right">
            <p class="button">
                <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pizzaId="@Model.Id">Add to cart</a>
            </p>
        </div>
    </div>
</div>