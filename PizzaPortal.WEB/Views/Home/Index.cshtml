@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}

@await Html.PartialAsync("_Carousel")

<h1 class="text-center">Prefered pizzas of the week</h1>
<h4 class="text-center">Clients preferences - just for you!</h4>

<div class="row">
    @foreach (var pizza in Model.PrefferedPizza)
    {
        @await Html.PartialAsync("_PizzasSummary", pizza);
    }
</div>

