@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}

@await Html.PartialAsync("_Carousel")

<h2>Prefered pizzas of the week</h2>
<h4>Clients preferences - just for you!</h4>

<div class="row">
    @foreach (var pizza in Model.PrefferedPizza)
    {
        @await Html.PartialAsync("_PizzasSummary", pizza);
    }
</div>

