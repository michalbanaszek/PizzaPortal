@model OrderDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>

<table class="table table-bordered table-danger">
    <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>         
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>         
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderPlaced)
            </th> 
        </tr>
    </thead>
    <tbody class="text-center">      
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Id)
                </td>            
                <td>
                    @Html.DisplayFor(modelItem => Model.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.AddressLine1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.AddressLine2)
                </td>              
                <td>
                    @Html.DisplayFor(modelItem => Model.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.OrderTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.OrderPlaced)
                </td>
            </tr>        
    </tbody>
</table>


<form asp-action="Delete" class="text-center">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> 
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

