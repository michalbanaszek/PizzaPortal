@model PizzaIngredientEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>
<hr />

<h4 class="text-center">Pizza Ingredient</h4>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="col-md-2 offset-md-2 control-label"></label>
                <div class="col-md-8 offset-md-2">
                    <input asp-for="Id" class="form-control" disabled />
                </div>
            </div>      
            <div class="form-group">
                <label asp-for="PizzaId" class="col-md-2 offset-md-2 control-label"></label>
                <div class="col-md-8 offset-md-2">
                    <select asp-for="PizzaId" class="form-control" asp-items="ViewBag.PizzaId"></select>
                    <span asp-validation-for="PizzaId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IngredientId" class="col-md-2 offset-md-2 control-label"></label>
                <div class="col-md-8 offset-md-2">
                    <select asp-for="IngredientId" class="form-control" asp-items="ViewBag.IngredientId"></select>
                    <span asp-validation-for="IngredientId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 offset-md-2">
                    <input type="submit" value="Update" class="btn btn btn-block btn-primary" />
                </div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>