@model ResetPasswordViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<h1 class="text-center">Reset Password</h1>

<form method="post">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

    <input asp-for="Email" type="hidden" />
    <input asp-for="Token" type="hidden" />

    <div class="form-group">
        <label asp-for="Password" class="col-md-2 offset-2 control-label"></label>
        <div class="col-md-8 offset-2">
            <input asp-for="Password" class="form-control" type="password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-2 offset-2 control-label"></label>
        <div class="col-md-8 offset-2">
            <input asp-for="ConfirmPassword" class="form-control" type="password"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 offset-2">
            <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
    </div>
</form>
